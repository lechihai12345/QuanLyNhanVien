@model IEnumerable<QLNV.Model.HopDong>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    td {
        text-align: center;
    }

    th {
        text-align: center;
    }

    .btt a {
        font-size: 20px;
        color: blue;
        font-weight: bold;
    }

    .aa {
        color: blue;
        font-size: 20px;
        font-weight: bold;
    }

    .aaa {
        font-size: 20px;
        font-weight: bold;
    }

    .col-md-6 {
        font-weight: bold;
        font-size: 20px;
        color: blue;
    }
    .card {
        background-color: lightblue;
    }
    .fa-pen-to-square {
        color: black
    }

    .fa-circle-info {
        color: black
    }

    .fa-trash {
        color: black
    }

    .fa-folder-plus {
        color: black
    }
</style>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class=" row">
                    <div class=" col-md-6">
                        <strong>QUẢN LÝ HỢP ĐỒNG</strong>
                    </div>
                    <div class=" col-md-6 text-right">
                        <button type="button" class="btt btn-success"><i class="fa-solid fa-folder-plus"></i>  @Html.ActionLink("TẠO HỢP ĐỒNG", "Create") </button>
                        
                    </div>
                </div>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                @if (TempData["AltertMessage"] != null)
                {
                    <div class="alert alert-success">
                        <strong>Thông Báo:</strong> @TempData["AltertMessage"]
                    </div>
                }

                <table class="table table-bordered">
                    <tr>
                        <th class="aa">
                            ID Hợp Đồng
                        </th>
                        <th class="aa">
                            Tên Hợp Đồng
                        </th>
                        <th class="aa">
                            Loại Hợp Đồng
                        </th>
                        <th class="aa">
                            Nội Dung
                        </th>
                        <th class="aa">
                            Thời Gian Ký
                        </th>
                        <th class="aa">
                            Thời Gian Kết Thúc
                        </th>
                        <th class="aa">
                            Ngày Bắt Đầu
                        </th>

                        <th class="aa">Chức Năng</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="aaa">
                                @Html.DisplayFor(modelItem => item.IDhopDong)
                            </td>
                            <td class="aaa">
                                @Html.DisplayFor(modelItem => item.TenHopDong)
                            </td>
                            <td class="aaa">
                                @Html.DisplayFor(modelItem => item.LoaiHD)
                            </td>
                            <td class="aaa">
                                @Html.DisplayFor(modelItem => item.NoiDung)
                            </td>
                            <td class="aaa">
                                @Html.DisplayFor(modelItem => item.TimeK)
                            </td>
                            <td class="aaa">
                                @Html.DisplayFor(modelItem => item.TimeKT)
                            </td>
                            <td class="aaa">
                                @Html.DisplayFor(modelItem => item.NgayStart)
                            </td>
                            <td class="aaa">



                                <button type="button" class="btt btn-success"><i class="fa-solid fa-pen-to-square"></i> @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = item.IDhopDong })  </button>
                                <button type="button" class="btt btn-success"><i class="fa-solid fa-circle-info"></i>@Html.ActionLink("Chi Tiết", "Details", new { id = item.IDhopDong }) </button>
                                <button type="button" class="btt btn-success"><i class="fa-solid fa-trash"></i>  @Html.ActionLink("Xóa", "Delete", new { id = item.IDhopDong })</button>
                            </td>
                        </tr>
                    }

                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>


