@model IEnumerable<QLNV.Model.NhanVien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    td {
        text-align: center;
    }

    th {
        text-align: center;
    }

    .btt a {
        font-size: 20px;
        color: blue;
        font-weight: bold;
    }

    .aa {
        color: blue;
        font-size: 20px;
        font-weight: bold;
    }

    .aaa {
        font-size: 20px;
        font-weight: bold;
    }

    .col-md-6 {
        font-weight: bold;
        font-size: 20px;
        color: red;
        
    }
    .ax div{
        float:left;
        padding-left:20px;
        padding-top:10px;
    }
    .col-md-1{
        max-width:max-content;
        font-weight:bold;
    }
   .col-md-2{
       max-width:max-content;
   }
   .card{
       background-color:lightblue;
   }
</style>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content my-2">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class=" row">
                    <div class=" col-md-6">
                        <strong>DANH SÁCH NHÂN VIÊN Ở SIÊU THỊ</strong>
                    </div>
                </div>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>



            <div class="tk my-1">
                <form id="formSearch" method="post">
                    <div class="ax">
                        <div class="col-md-1">Nhập Họ Tên</div>
                        <div class="col-md-2"><input type="text" id="EmpName" name="EmpName" /></div>
                        <div class="col-md-1"><input type="submit" id="submitsearch" value="Tìm Kiếm" /></div>
                    </div>
                </form>

            </div>


            <div class="card-body">


                <table class="table table-bordered">
                    <tr>


                        <th class="aa">
                            Họ Tên
                        </th>
                        <th class="aa">
                            Giới Tính
                        </th>
                        <th class="aa">
                            Email
                        </th>
                        <th class="aa">
                            Tên Chức Vụ
                        </th>
                        <th class="aa">
                            Tên Hợp Đồng
                        </th>
                        <th class="aa">
                            Tên Khu
                        </th>

                        <th class="aa">
                            Địa Chỉ
                        </th>

                        <th class="aa">
                            Bằng Cấp
                        </th>
                        <th class="aa">
                            Số Lương
                        </th>



                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>


                            <td class="aaa">
                                @Html.DisplayFor(modelItem => item.HoTen)
                            </td>
                            <td class="aaa">
                                @Html.DisplayFor(modelItem => item.GioiTinh)
                            </td>
                            <td class="aaa">
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>

                            <td class="aaa">
                                @Html.DisplayFor(modelItem => item.ChucVu.TenChucVu)
                            </td>
                            <td class="aaa">
                                @Html.DisplayFor(modelItem => item.HopDong.TenHopDong)
                            </td>
                            <td class="aaa">
                                @Html.DisplayFor(modelItem => item.KhuLam.TenKhu)
                            </td>

                            <td class="aaa">
                                @Html.DisplayFor(modelItem => item.DiaChi)
                            </td>

                            <td class="aaa">
                                @Html.DisplayFor(modelItem => item.BangCap)
                            </td>
                            <td class="aaa">
                                @Html.DisplayFor(modelItem => item.Luong.SoLuong)
                            </td>


                        </tr>
                    }

                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>